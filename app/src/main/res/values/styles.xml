<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="expand_ly">
        <item name="android:layout_width">@dimen/dpi_120px</item>
        <item name="android:layout_height">@dimen/dpi_120px</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:visibility">gone</item>
        <item name="android:clickable">true</item>
    </style>


    <style name="expand_icon">
        <item name="android:layout_width">@dimen/dpi_60px</item>
        <item name="android:layout_height">@dimen/dpi_60px</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="expand_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
</resources>
